<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.inddev.meucombustivel.AddAbastecimentoActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addSupply_activity_valorLitro"
        android:hint="Valor por litro"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addSupply_activity_quantidadeLitros"
        android:hint="Quantidade de litros"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addSupply_activity_kmAtual"
        android:hint="Quilometragem atual do veÃ­culo"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addSupply_activity_posto"
        android:hint="Posto"/>

    <Button
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="right"
        android:background="@drawable/itemoval"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="OK"
        android:textColor="#FFFFFF"
        android:textSize="20dp"/>

</LinearLayout>
